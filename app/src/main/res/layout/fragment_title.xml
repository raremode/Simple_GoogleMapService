<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.navigationadvancedsample.homescreen.TitleFragment"
    tools:layout_editor_absoluteY="81dp">

    <fragment
        android:id="@+id/mapsee"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/gpsRefresh"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="344dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/fon"
            android:scaleType="fitCenter"
            android:src="@drawable/refreshlocation"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/filterAll"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ovalbuttons"
            android:text="Всё"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/filterPlastic"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ovalbuttons"
            android:text="Пластик"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/filterAll"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/filterGlass"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ovalbuttons"
            android:text="стекло"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/filterPlastic"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/filterBatteries"
            android:layout_width="95dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ovalbuttons"
            android:text="батарейки"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/filterGlass"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>
